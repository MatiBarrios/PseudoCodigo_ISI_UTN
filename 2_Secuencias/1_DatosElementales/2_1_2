ACCION Eje_2_1_2 ES
    Ambiente
        Sec : Secuencia de caracter
        car : Caracter
        cont : Entero

        FUNCION EsVocal(c : Caracter):Logico ES
            SEGUN c HACER
                ='A':
                    EsVocal := Verdadero
                ='E':
                    EsVocal := Verdadero
                ='I':
                    EsVocal := Verdadero
                ='O':
                    EsVocal := Verdadero
                ='U':
                    EsVocal := Verdadero
                otros : 
                    EsVocal := Falso
            FIN_SEGUN
        FIN_FUNCION

        PROCEDIMIENTO Mostrar_Resultados ES
            ESCRIBIR("cantidad de consonantes: ", cont)
        FIN_PROCEDIMIENTO

        PROCEDIMIENTO Recorrer_secuencia ES
            MIENTRAS car <> 'Z' y NFDS(Sec) HACER
                SI NO EsVocal(car) ENTONCES
                    cont := cont + 1
                Fin_Si
                AVZ(Sec, car)
            FIN_MIENTRAS
        FIN_PROCEDIMIENTO

        PROCEDIMIENTO Inicializar ES
            ARR(Sec)
            AVZ(Sec, car)
            cont := 0
        FIN_PROCEDIMIENTO

        PROCEDIMIENTO Finalizar ES
            CERRAR(Sec)
        FIN_PROCEDIMIENTO
    Proceso
        Inicializar
        Recorrer_secuencia
        Mostrar_Resultados
        Finalizar
FIN_ACCION
ACCION Eje_2_1_8 ES
    Ambiente
        Sec_Entrada : Secuencia de Entero
        Sec_Salida : Secuencia de Caracter
        cuit : Entero

        PROCEDIMIENTO BARRER_SECUENCIA ES
            MIENTRAS (cuit <> 0) HACER
                OPERAR_SECUENCIA
                AVZ(Sec_Entrada, cuit)
            FIN_MIENTRAS
        FIN_PROCEDIMIENTO

        PROCEDIMIENTO OPERAR_SECUENCIA ES
            Ambiente Local
                aux, cuit_aux : Entero
            Proceso
                SI (cuit mod 10) <= 3 ENTONCES
                    aux := 10000000000
                    cuit_aux := cuit
                    MIENTRAS (aux > 0) HACER
                        GRABAR(Sec_Salida, ParseDecimalCaracter(cuit_aux div aux))
                        cuit_aux := cuit_aux div 10
                        aux := aux div 10
                    FIN_MIENTRAS
                    GRABAR(Sec_Salida, '-')
                FIN_SI
        FIN_PROCEDIMIENTO

        PROCEDIMIENTO INICIALIZAR ES
            ARR(Sec_Entrada)
            AVZ(Sec_Entrada, cuit)
            CREAR(Sec_Salida)
        FIN_PROCEDIMIENTO

        PROCEDIMIENTO FINALIZAR ES
            CERRAR(Sec_Entrada)
            CERRAR(Sec_Salida)
        FIN_PROCEDIMIENTO

        FUNCION ParseDecimalCaracter(n : Entero):Caracter ES
            SEGUN n HACER
                =0:
                    ParseDecimalCaracter := '0'
                =1:
                    ParseDecimalCaracter := '1'
                =2:
                    ParseDecimalCaracter := '2'
                =3:
                    ParseDecimalCaracter := '3'
                =4:
                    ParseDecimalCaracter := '4'
                =5:
                    ParseDecimalCaracter := '5'
                =6:
                    ParseDecimalCaracter := '6'
                =7:
                    ParseDecimalCaracter := '7'
                =8:
                    ParseDecimalCaracter := '8'
                =9:
                    ParseDecimalCaracter := '9'
            FIN_SEGUN
        FIN_FUNCION

    Proceso
        
        INICIALIZAR
        BARRER_SECUENCIA
        FINALIZAR

FIN_ACCION
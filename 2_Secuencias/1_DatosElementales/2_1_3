ACCION Eje_2_1_3 ES
    Ambiente
        Sec_entrada, Sec_salida : Secuencia de Caracter
        car : Caracter

        PROCEDIMIENTO Recorrer_secuencia ES
            MIENTRAS NFDS(Sec_entrada) HACER
                GRABAR_SECUENCIA
                AVZ(Sec_entrada, car)
            FIN_MIENTRAS
        FIN_PROCEDIMIENTO

        PROCEDIMIENTO GRABAR_SECUENCIA ES
            SI (car <> '$') ENTONCES
                GRABAR(Sec_salida, car)
            FIN_SI
        FIN_PROCEDIMIENTO

        PROCEDIMIENTO Inicializar ES
            ARR(Sec_entrada)
            CREAR(Sec_salida)
            AVZ(Sec, car)
        FIN_PROCEDIMIENTO

        PROCEDIMIENTO Finalizar ES
            CERRAR(Sec_entrada)
            CERRAR(Sec_salida)
        FIN_PROCEDIMIENTO
    Proceso
        Inicializar
        Recorrer_secuencia
        Finalizar
FIN_ACCION
ACCION Eje_2_1_7 ES
    Ambiente
        Sec_Entrada, Sec_Salida : Secuencia de Entero
        cuit : Entero

        PROCEDIMIENTO BARRER_SECUENCIA ES
            MIENTRAS (cuit <> 0) HACER
                GRABAR_SECUENCIA
                AVZ(Sec_Entrada, cuit)
            FIN_MIENTRAS
        FIN_PROCEDIMIENTO

        PROCEDIMIENTO GRABAR_SECUENCIA ES
            SI (cuit mod 10) <= 3 ENTONCES
                GRABAR(Sec_Salida, cuit)
            FIN_SI
        FIN_PROCEDIMIENTO

        PROCEDIMIENTO INICIALIZAR ES
            ARR(Sec_Entrada)
            AVZ(Sec_Entrada, cuit)
            CREAR(Sec_Salida)
        FIN_PROCEDIMIENTO

        PROCEDIMIENTO FINALIZAR ES
            CERRAR(Sec_Entrada)
            CERRAR(Sec_Salida)
        FIN_PROCEDIMIENTO

    Proceso
        
        INICIALIZAR
        BARRER_SECUENCIA
        FINALIZAR

FIN_ACCION
ACCION Eje_1_2_5 ES
    Ambiente
        
        PROCEDIMIENTO Inicializar ES
            Ambiente Local
                FIN : Entero
            Proceso
                FIN := 0
                MIENTRAS (FIN <> 1) HACER
                    Operar
                    ESCRIBIR("Desea finalizar el programa? 1- si")
                    LEER(FIN)
                FIN_MIENTRAS
        FIN_PROCEDIMIENTO

        PROCEDIMIENTO Operar ES
            Ambiente Local
                c : Caracter
            Proceso
                ESCRIBIR("Ingrese un caracter")
                LEER(c)
                SEGUN c HACER
                    ='1':
                        ESCRIBIR("El caracter es un numero")
                    ='2':
                        ESCRIBIR("El caracter es un numero")
                    ='3':
                        ESCRIBIR("El caracter es un numero")
                    ='4':
                        ESCRIBIR("El caracter es un numero")
                    ='5':
                        ESCRIBIR("El caracter es un numero")
                    ='6':
                        ESCRIBIR("El caracter es un numero")
                    ='7':
                        ESCRIBIR("El caracter es un numero")
                    ='8':
                        ESCRIBIR("El caracter es un numero")
                    ='9':
                        ESCRIBIR("El caracter es un numero")
                    ='0':
                        ESCRIBIR("El caracter es un numero")
                    otros :
                        ESCRIBIR("El caracter no es un numero")
                FIN_SEGUN
        FIN_PROCEDIMIENTO

    Proceso
        Inicializar
FIN_ACCION